// 综合控制流测试 | Comprehensive Control Flow Test

函数 主() {
    变量 数字 = 10;
    
    // 测试 if-else
    如果 数字 > 5 {
        打印 "数字大于5";
    } 否则 {
        打印 "数字小于等于5";
    }
    
    // 测试 while 循环
    变量 计数器 = 0;
    当 计数器 < 3 {
        打印 计数器;
        计数器 = 计数器 + 1;
    }
    
    // 嵌套控制流
    变量 i = 0;
    当 i < 2 {
        如果 i == 0 {
            打印 "第一次";
        } 否则 {
            打印 "第二次";
        }
        i = i + 1;
    }
}
