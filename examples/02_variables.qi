// 02_variables.qi - 变量声明和基本类型
// Variable declarations and basic types in Qi

函数 主() {
    // 整数变量
    变量 年龄: 整数 = 25;

    // 字符串变量
    变量 姓名: 字符串 = "张三";

    // 布尔变量
    变量 是学生: 布尔 = 真;

    // 浮点数变量
    变量 成绩: 浮点数 = 89.5;

    // 字符变量
    变量 等级: 字符 = 'A';

    打印 "姓名: " + 姓名;
    打印 "年龄: " + 年龄;
    打印 "是学生: " + 是学生;
    打印 "成绩: " + 成绩;
    打印 "等级: " + 等级;
}