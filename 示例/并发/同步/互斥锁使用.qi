包 主程序;

函数 入口() {
    // 测试 Mutex 功能
    打印行("开始 Mutex 测试");

    // 创建互斥锁
    变量 互斥锁 = 创建互斥锁();

    // 加锁
    加锁(互斥锁);
    打印行("已获取互斥锁");

    // 模拟临界区操作
    变量 计数器 = 0;
    计数器 = 计数器 + 1;
    打印行("计数器值: " + 计数器);

    // 解锁
    解锁(互斥锁);
    打印行("已释放互斥锁");

    // 尝试非阻塞加锁
    变量 尝试结果 = 尝试加锁(互斥锁);
    如果 (尝试结果 == 0) {
        打印行("成功获取互斥锁（非阻塞）");
        解锁(互斥锁);
    } 否则 {
        打印行("无法获取互斥锁（非阻塞）");
    }

    打印行("Mutex 测试完成");
}