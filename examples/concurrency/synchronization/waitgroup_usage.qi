包 主程序;

函数 入口() {
    // 测试 WaitGroup 功能
    打印行("开始 WaitGroup 测试");

    // 创建 WaitGroup
    变量 等待组 = 创建等待组();

    // 添加3个任务到 WaitGroup
    添加等待(等待组, 3);

    // 模拟任务完成
    完成(等待组);  // 任务1完成
    打印行("任务1完成");

    完成(等待组);  // 任务2完成
    打印行("任务2完成");

    完成(等待组);  // 任务3完成
    打印行("任务3完成");

    // 等待所有任务完成
    等待(等待组);

    打印行("所有任务已完成");

    // 清理资源
    // 注意：在实际实现中应该有销毁函数

    打印行("WaitGroup 测试完成");
}