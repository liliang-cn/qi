// Helper macro for comma-separated lists
Comma<T>: Vec<T> = {
    <first:T> => vec![first],
    <first:T> "," <rest:Comma<T>> => {
        let mut rest = rest;
        rest.insert(0, first);
        rest
    },
    <first:T> "，" <rest:Comma<T>> => {
        let mut rest = rest;
        rest.insert(0, first);
        rest
    },
};

// Helper macro for semicolon-separated lists
SemiSeparated<T>: Vec<T> = {
    <first:T> ";" => vec![first],
    <first:T> ";" <rest:SemiSeparated<T>> => {
        let mut rest = rest;
        rest.insert(0, first);
        rest
    },
    <first:T> "；" => vec![first],
    <first:T> "；" <rest:SemiSeparated<T>> => {
        let mut rest = rest;
        rest.insert(0, first);
        rest
    }
};

