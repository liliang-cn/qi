// 字符串操作测试用例
// String manipulation test cases

// 基础字符串声明
变量 问候语: 字符串 = "你好，Qi世界！";
变量 空字符串: 字符串 = "";
变量 单字符: 字符串 = "A";

// 字符串连接
变量 姓名 = "张三";
变量 完整问候 = "你好，" + 姓名 + "！";

// 字符串格式化（如果支持）
变量 年龄 = 25;
变量 格式化消息 = "姓名: {}, 年龄: {}";
// 变量 个人信息 = 格式化消息.格式(姓名, 年龄);

// 字符串长度
变量 长度 = 问候语.长度();

// 字符串索引访问（如果支持）
变量 首字符 = 问候语[0];
变量 最后字符 = 问候语[问候语.长度() - 1];

// 字符串比较
变量 相同 = (姓名 == "张三");
变量 不同 = (姓名 != "李四");

// 字符串包含检查（如果支持）
变量 包含检查 = 问候语.包含("Qi");

// 字符串转大写/小写（如果支持）
// 变量 大写问候 = 问候语.转大写();
// 变量 小写问候 = 问候语.转小写();

// 字符串去除空格（如果支持）
变量 带空格 = "  你好  ";
// 变量 去除空格 = 带空格.去除空格();

// 字符串替换（如果支持）
变量 原文 = "你好世界";
变量 替换后 = 原文.替换("世界", "Qi");

// 多行字符串
变量 多行文本 = "第一行
第二行
第三行";

// 字符串中的转义字符
变量 转义测试 = "换行符:\n制表符:\t引号:\"反斜杠:\\";