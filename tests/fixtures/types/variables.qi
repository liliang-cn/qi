// 变量声明测试用例
// Variable declaration test cases

// 基础变量声明
变量 计数器 = 0;

// 带类型注解的变量声明
变量 年龄: 整数 = 25;
变量 姓名: 字符串 = "张三";
变量 是否活跃: 布尔 = 真;

// 常量声明
常量 最大重试次数 = 3;
常量 应用版本: 字符串 = "1.0.0";

// 浮点数变量
变量 圆周率: 浮点数 = 3.14159;

// 字符变量
变量 初始: 字符 = 'A';

// 数组变量（如果支持）
变量 数字列表 = [1, 2, 3, 4, 5];
变量 字符串数组 = ["你好", "世界", "Qi"];

// 变量赋值
计数器 = 计数器 + 1;
年龄 = 年龄 + 1;

// 常量赋值（应该报错）
// 最大重试次数 = 5;  // 这应该产生编译错误

// 类型不匹配赋值（应该报错）
// 年龄 = "二十五";  // 这应该产生编译错误