// 当循环测试用例 | While Loop Test Cases
// 测试条件循环逻辑 | Test conditional loop logic

// 测试1: 基本当循环 | Test 1: Basic While Loop
变量 counter = 0;

当 (counter < 5) {
    counter = counter + 1;
}

// 测试2: 带有初始条件的循环 | Test 2: Loop with Initial Condition
变量 i = 10;
变量 sum = 0;

当 (i > 0) {
    sum = sum + i;
    i = i - 1;
}

// 测试3: 无限循环防护测试 | Test 3: Infinite Loop Protection Test
变量 flag = 真;
变量 iterations = 0;

当 (flag && iterations < 100) {
    iterations = iterations + 1;
    如果 (iterations >= 10) {
        flag = 假;
    }
}

// 测试4: 嵌套当循环 | Test 4: Nested While Loops
变量 outer = 0;
变量 inner = 0;
变量 total = 0;

当 (outer < 3) {
    inner = 0;
    当 (inner < 3) {
        total = total + 1;
        inner = inner + 1;
    }
    outer = outer + 1;
}

// 测试5: 布尔条件循环 | Test 5: Boolean Condition Loop
变量 running = 真;
变量 step = 0;

当 (running) {
    step = step + 1;
    如果 (step >= 5) {
        running = 假;
    }
}

// 测试6: 复合条件循环 | Test 6: Compound Condition Loop
变量 x = 0;
变量 y = 0;

当 ((x < 10) && (y < 5)) {
    x = x + 1;
    如果 (x % 2 == 0) {
        y = y + 1;
    }
}

// 测试7: 字符串条件循环 | Test 7: String Condition Loop
变量 status = "运行中";
变量 attempts = 0;

当 (status == "运行中" && attempts < 3) {
    attempts = attempts + 1;
    如果 (attempts >= 2) {
        status = "已完成";
    }
}

// 测试8: 空循环体 | Test 8: Empty Loop Body
变量 wait_counter = 0;

当 (wait_counter < 3) {
    wait_counter = wait_counter + 1;
    // 循环体可能为空或只有简单操作
}

// 测试9: 循环中的条件判断 | Test 9: Conditional Logic Inside Loop
变量 num = 1;
变量 even_count = 0;
变量 odd_count = 0;

当 (num <= 10) {
    如果 (num % 2 == 0) {
        even_count = even_count + 1;
    } 否则 {
        odd_count = odd_count + 1;
    }
    num = num + 1;
}

// 测试10: 复杂数值计算循环 | Test 10: Complex Numeric Calculation Loop
变量 n = 5;
变量 factorial = 1;
变量 temp = 1;

当 (temp <= n) {
    factorial = factorial * temp;
    temp = temp + 1;
}