// 如果语句测试用例 | If Statement Test Cases
// 测试基本条件分支逻辑 | Test basic conditional branching logic

// 测试1: 基本如果语句 | Test 1: Basic If Statement
如果 假 {
    变量 result = "条件为真";
} 否则 {
    变量 result = "条件为假";
}

// 测试2: 带有复杂条件的如果语句 | Test 2: If Statement with Complex Condition
变量 x = 10;
变量 y = 20;

如果 (x > y) {
    变量 comparison = "x 大于 y";
} 否则 如果 (x < y) {
    变量 comparison = "x 小于 y";
} 否则 {
    变量 comparison = "x 等于 y";
}

// 测试3: 嵌套如果语句 | Test 3: Nested If Statements
变量 age = 25;
变量 has_license = 真;

如果 (age >= 18) {
    如果 (has_license) {
        变量 can_drive = "可以驾驶";
    } 否则 {
        变量 can_drive = "需要驾照";
    }
} 否则 {
    变量 can_drive = "年龄不足";
}

// 测试4: 布尔表达式条件 | Test 4: Boolean Expression Conditions
变量 is_student = 真;
变量 has_discount = 假;

如果 (is_student && has_discount) {
    变量 price_category = "学生折扣价";
} 否则 如果 (is_student || has_discount) {
    变量 price_category = "部分折扣";
} 否则 {
    变量 price_category = "标准价格";
}

// 测试5: 字符串比较条件 | Test 5: String Comparison Conditions
变量 weather = "晴天";

如果 (weather == "晴天") {
    变量 activity = "去公园";
} 否则 如果 (weather == "雨天") {
    变量 activity = "在室内";
} 否则 {
    变量 activity = "根据情况决定";
}

// 测试6: 数值范围判断 | Test 6: Numeric Range判断
变量 score = 85;

如果 (score >= 90) {
    变量 grade = "优秀";
} 否则 如果 (score >= 80) {
    变量 grade = "良好";
} 否则 如果 (score >= 70) {
    变量 grade = "中等";
} 否则 如果 (score >= 60) {
    变量 grade = "及格";
} 否则 {
    变量 grade = "不及格";
}

// 测试7: 空条件体 | Test 7: Empty Condition Body
变量 flag = 真;

如果 (flag) {
    // 空体应该被正确处理
} 否则 {
    变量 default_value = "默认值";
}

// 测试8: 复合条件赋值 | Test 8: Compound Condition Assignment
变量 a = 5;
变量 b = 10;
变量 c = 15;

如果 ((a + b) > c) {
    变量 outcome = "和大于c";
} 否则 如果 ((a * b) < c) {
    变量 outcome = "积小于c";
} 否则 {
    变量 outcome = "其他情况";
}