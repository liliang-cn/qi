// Comprehensive Control Flow Tests for Qi Language
// Tests if-else conditions, while loops, for loops, and nested structures

// Test 1: Simple if statement
函数 测试简单如果() {
    变量 x = 10;
    如果 x > 5 {
        返回 "大于5";
    }
    返回 "不大于5";
}

// Test 2: If-else statement
函数 测试如果否则() {
    变量 x = 3;
    如果 x > 5 {
        返回 "大于5";
    } 否则 {
        返回 "小于等于5";
    }
}

// Test 3: Nested if statements
函数 测试嵌套如果() {
    变量 x = 10;
    变量 y = 5;

    如果 x > 5 {
        如果 y > 3 {
            返回 "都满足";
        } 否则 {
            返回 "x满足但y不满足";
        }
    } 否则 {
        返回 "x不满足";
    }
}

// Test 4: While loop basic
函数 测试基本循环() {
    变量 i = 0;
    变量 总和 = 0;

    当 i < 5 {
        总和 = 总和 + i;
        i = i + 1;
    }
    返回 总和;
}

// Test 5: While loop with condition
函数 测试循环条件() {
    变量 i = 10;
    变量 结果 = "";

    当 i > 0 {
        结果 = 结果 + "循环";
        i = i - 1;
    }
    返回 结果;
}

// Test 6: For loop (simple iteration)
函数 测试基本对于循环() {
    变量 总和 = 0;
    对于 i 在 1...5 {
        总和 = 总和 + i;
    }
    返回 总和;
}

// Test 7: Complex nested control flow
函数 测试复杂嵌套() {
    变量 结果 = "";
    变量 i = 0;

    当 i < 3 {
        变量 j = 0;
        如果 i == 1 {
            当 j < 2 {
                结果 = 结果 + "内循环";
                j = j + 1;
            }
        } 否则 {
            结果 = 结果 + "外循环";
        }
        i = i + 1;
    }
    返回 结果;
}

// Test 8: Early return in loops
函数 测试循环中返回() {
    变量 i = 0;
    当 i < 10 {
        如果 i == 5 {
            返回 "找到5";
        }
        i = i + 1;
    }
    返回 "未找到";
}

// Test 9: Boolean logic in conditions
函数 测试布尔逻辑() {
    变量 a = 真;
    变量 b = 假;
    变量 c = 10;

    如果 a 与 c > 5 {
        返回 "条件1满足";
    } 否则 如果 b 或 c > 15 {
        返回 "条件2满足";
    } 否则 {
        返回 "都不满足";
    }
}

// Test 10: Multiple return points
函数 测试多返回点(x) {
    如果 x < 0 {
        返回 "负数";
    } 否则 如果 x == 0 {
        返回 "零";
    } 否则 如果 x > 0 与 x < 10 {
        返回 "个位数";
    } 否则 {
        返回 "大数";
    }
}

// Test 11: Loop with string operations
函数 测试循环字符串操作() {
    变量 结果 = "";
    变量 i = 0;

    当 i < 3 {
        结果 = 结果 + "项" + i;
        i = i + 1;
    }
    返回 结果;
}

// Test 12: Complex comparison chains
函数 测试复杂比较链() {
    变量 x = 5;
    变量 y = 10;
    变量 z = 15;

    如果 x < y 与 y < z {
        如果 x + y == z {
            返回 "等差数列";
        } 否则 {
            返回 "递增但非等差";
        }
    } 否则 {
        返回 "不递增";
    }
}