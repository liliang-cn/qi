        matrix_sum = matrix_sum + (row * 3 + col);
    }
}

// 测试8: 循环中的条件判断 | Test 8: Conditional Logic Inside Loop
变量 even_sum = 0;
变量 odd_sum = 0;

对于 (num = 1; num <= 10; num = num + 1) {
    如果 (num % 2 == 0) {
        even_sum = even_sum + num;
    } 否则 {
        odd_sum = odd_sum + num;
    }
}

