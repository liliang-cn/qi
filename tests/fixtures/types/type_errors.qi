// 类型错误测试用例
// Type error test cases

// 1. 类型不匹配的赋值
变量 数字: 整数 = 42;
// 数字 = "这是字符串";  // 应该报错：类型不匹配

// 2. 函数返回类型不匹配
函数 整数 返回数字() {
    // 返回 "错误的字符串";  // 应该报错：返回类型不匹配
    返回 42;  // 正确
}

// 3. 函数参数类型不匹配
函数 字符串 连接字符串(字符串 文本1, 字符串 文本2) {
    返回 文本1 + 文本2;
}

// 错误的参数类型
// 变量 结果 = 连接字符串(42, "字符串");  // 应该报错：参数类型错误

// 4. 常量重新赋值
常量 固定值 = 100;
// 固定值 = 200;  // 应该报错：常量不能重新赋值

// 5. 未声明变量使用
// 变量 未定义 = 未知变量 + 1;  // 应该报错：未声明的变量

// 6. 数组索引类型错误
变量 数组 = [1, 2, 3];
// 变量 索引 = 数组["字符串索引"];  // 应该报错：数组索引必须是整数

// 7. 算术操作类型错误
变量 文本1 = "你好";
变量 文本2 = "世界";
// 变量 结果 = 文本1 + 文本2;  // 字符串连接可能允许，但算术操作应该报错
// 变量 乘法结果 = 文本1 * 2;  // 应该报错：字符串不能进行乘法操作